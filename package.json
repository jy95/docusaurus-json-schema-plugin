{
  "name": "docusaurus-json-schema-plugin",
  "version": "0.0.0-development",
  "description": "A Docusaurus theme plugin that provides a JSON Schema viewer / editor React component !",
  "keywords": [
    "docusaurus",
    "docusaurus theme",
    "docusaurus plugin",
    "json schema",
    "json schema viewer",
    "json schema documentation",
    "json schema editor"
  ],
  "main": "lib/index.js",
  "types": "src/theme-json-schema.d.ts",
  "repository": "https://github.com/jy95/docusaurus-json-schema-plugin.git",
  "homepage": "https://jy95.github.io/docusaurus-json-schema-plugin/",
  "author": "jy95",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "build": "tsc && node copyUntypedFiles.mjs",
    "prettier": "prettier --write **/*.{js,jsx,ts,tsx,json}",
    "semantic-release": "semantic-release",
    "test": "npx jest",
    "test:coverage": "npx jest --coverage"
  },
  "prettier": {
    "semi": false
  },
  "exports": {
    "./lib/*": "./lib/*",
    "./src/*": "./src/*",
    ".": {
      "types": "./src/theme-json-schema.d.ts",
      "default": "./lib/index.js"
    }
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.3.1",
    "@docusaurus/types": "^2.2.0",
    "@types/jest": "^29.4.0",
    "@types/react": "^17.0.52",
    "@types/react-test-renderer": "^17.0.2",
    "fs-extra": "^11.1.0",
    "jest": "^29.4.1",
    "json-schema-typed": "^8.0.1",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.2",
    "semantic-release": "^21.0.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "@docusaurus/core": "^2.2.0",
    "@docusaurus/theme-classic": "^2.2.0",
    "react": "^17.0.2 || ^18.0.0"
  },
  "dependencies": {
    "@stoplight/json-ref-resolver": "^3.1.5",
    "monaco-editor": "^0.36.1",
    "monaco-editor-webpack-plugin": "^7.0.1",
    "react-monaco-editor": "^0.52.0"
  }
}
